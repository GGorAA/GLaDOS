<html lang="en">
<head>
    <title>GLaDOS Setup: GPIO</title>
    <link rel="icon" href="icons/favicon.png" type="image/x-icon"/>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>
<body>
<div id="mainContent" class="content">
    <a href="/oobe?page=2"><span id="back-button" class="back">{{back-button}}</span></a>
    <h1 id="text0" class="main-header">{{main_header}}</h1>
    <h3 id="secondary-text" class="secondary-header">{{secondary_header}}</h3>
    <br>
    <div id="setup" class="setup">
        <div class="setup-content">
            <div id="theme1" class="variant theme1">
                <!--<a href="">--><img onclick="toggleLightMode()" src="illustrations/lightThemeIcon.svg" alt=""><!--</a>-->
                <h2 id="text1" class="variant-text">{{theme_light}}</h2>
            </div>
            <div id="theme2" class="variant theme2">
                <img onclick="toggleDarkMode()" src="illustrations/darkThemeIcon.svg" alt="">
                <h2 id="text2" class="variant-text">{{theme_dark}}</h2>
            </div>
            <div id="theme3" class="variant theme3">
                <img src="illustrations/systemThemeIcon.svg" alt="">
                <h2 id="text3" class="variant-text">{{theme_system}}</h2>
            </div>
        </div>
    </div>
    <div class="end-buttons">
        <div class="buttons_wrapper">
            <button id="done"><a href="">{{done_button}}</a></button>
        </div>
    </div>
</div>
<!--suppress CssUnusedSymbol -->
<style>
    /* Dark mode */
    body.dark {
        background-color: #000000;
        transition-duration: 1000ms;
    }
    span.back.dark {
        color: #9a9a9a;
        transition-duration: 1000ms;
    }
    span.back.dark:active {
        color: #ffffff;
    }
    div.content.dark {
        background-color: #65622f;
        transition-duration: 1000ms;
    }
    div.setup.dark {
        background-color: #575a24;
        transition-duration: 1000ms;
    }
    div.variant.dark {
        background-color: #848046;
        transition-duration: 1000ms;
    }
    div.theme1.dark {
        background-color: #848046;
        transition-duration: 1000ms;
    }
    div.theme2.dark {
        background-color: #848046;
        transition-duration: 1000ms;
    }
    div.theme3.dark {
        background-color: #848046;
        transition-duration: 1000ms;
    }
    h1.dark {
        color: white;
        transition-duration: 1000ms;
    }
    h3.dark {
        color: #cacaca;
        transition-duration: 1000ms;
    }
    h2.dark {
        color: white;
        transition-duration: 1000ms;
    }
    /* Light mode */
    body {
        transition-duration: 1000ms;
    }
    h1 {
        transition-duration: 1000ms;
    }
    span.back {
        margin-top: -20px;
        color: #505050;
        transition-duration: 1000ms;
    }
    span.back:hover {
        color: #000000;
    }
    span.back:active {
        color: #7a7a7a;
    }
    h2 {
        font-family: 'Montserrat', sans-serif;
        font-weight: 400;
        transition-duration: 1000ms;
    }
    div.setup-content {
        text-align: center;
    }
    div.variant {
        background-color: #FFFBBE;
        border-radius: 20px;
        border: none;
        margin: 20px;
        padding: 20px;
        display: inline-block;
        box-shadow: 5px 9px 20px 0 #44444454;
        transition-duration: 1000ms;
    }
    img {
        width: 150px;
        height: 150px;
    }
    h1.main-header {
        font-family: 'Montserrat', sans-serif;
        text-align: left;
        font-weight: 500;
    }
    div.end-buttons {
        width: 100%;
    }
    div.buttons_wrapper {
        text-align: end;
    }
    button {
        border-radius: 5px;
        border: none;
        background-color: #f8f8f8;
        margin: 20px 10px 10px;
        padding: 10px;
        transition-duration: 100ms;
        box-shadow: 0 10px 10px rgba(69, 69, 69, 0.44);
        font-family: 'Montserrat', sans-serif;
    }
    button:active {
        border-radius: 5px;
        border: none;
        background-color: #848484;
        margin: 20px 10px 10px;
        padding: 10px;
        transition-duration: 100ms;
        box-shadow: 0 5px 5px rgba(69, 69, 69, 0.44);
        font-family: 'Montserrat', sans-serif;
    }
    h3.secondary-header {
        font-family: 'Montserrat', sans-serif;
        text-align: left;
        font-weight: 500;
        transition-duration: 1000ms;
    }
    a {
        font-family: 'Montserrat', sans-serif;
        color: black;
        margin: 10px;
        text-decoration: none;
    }
    div.setup {
        background-color: #FFF678;
        padding-top: 50px;
        padding-left: 10px;
        padding-bottom: 50px;
        border-radius: 20px;
        transition-duration: 1000ms;
    }
    div.content {
        margin: 100px auto 0;
        width: 800px;
        padding: 50px;
        background-color: #FFF994;
        border-radius: 20px;
        transition-duration: 1000ms;
    }
</style>
<script src="js/darkmode.js"></script>
</body>
</html>