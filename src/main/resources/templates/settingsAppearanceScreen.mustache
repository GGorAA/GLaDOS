{{> settingsSidebar}}
<div class="content">
    <h1 class="first_label">{{appearance}}</h1>
    <div class="theme_setting">
        <h2 class="theme_settings_label">{{theme_settings_label}}</h2>
        <select name="Select theme..." id="theme_select">
            <option value="auto">{{theme_select_default}}</option>
            <option value="dark">{{theme_select_dark}}</option>
            <option value="light">{{theme_select_light}}</option>
        </select>
        <br>
        <h2 class="lang_settings_label">{{lang_settings_label}}</h2>
        <select name="Select language..." id="lang_select">
            <option value="en_US">English</option>
            <option value="ru_RU">Русский</option>
            <option value="ua_UA">Українська</option>
        </select>
    </div>
</div>
<style>
    h1.first_label {
        margin-top: 50px;
    }
    div.theme_setting {
        display: inline-block;
    }
    h2.theme_settings_label {
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }
    h2.lang_settings_label {
        display: inline-block;
        font-family: 'Montserrat', sans-serif;
    }
    select#theme_select {
        display: inline-block;
    }
    h1 {
        font-family: 'Montserrat', sans-serif;
    }

    /* Style page content */
    .content {
        margin-left: 300px; /* Same as the width of the sidebar */
        padding: 0px 10px;
    }

    /* On smaller screens, where height is less than 450px, change the style of the sidebar (less padding and a smaller font size) */
    @media screen and (max-height: 450px) {
        .sidebar {padding-top: 15px;}
        .sidebar a {font-size: 18px;}
    }
</style>