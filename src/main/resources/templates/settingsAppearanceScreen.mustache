{{> settingsSidebar}}
<div class="content">
    <h1 class="first_label">Appearance</h1>
    <div class="theme_setting">
        <h2 class="theme_settings_label">Theme</h2>
        <select name="Select theme..." id="theme_select">
            <option value="auto">System default</option>
            <option value="dark">Dark</option>
            <option value="light">Light</option>
        </select>
    </div>
</div>
<style>
    h1.first_label {
        margin-top: 50px;
    }
    div.theme_setting {
        display: inline-block;
    }
    h2.theme_settings_label {
        display: inline-block;
    }
    select#theme_select {
        display: inline-block;
    }
    /* The sidebar menu */
    h1.sidebar_label {
        font-size: 50px;
        font-family: 'Montserrat', sans-serif;
        padding: 6px 8px 6px 16px;
        color: black;
        text-decoration: none;
        display: block;
    }
    h1 {
        font-family: 'Montserrat', sans-serif;
    }
    .sidebar {
        width: 250px; /* Set the width of the sidebar */
        position: fixed; /* Fixed Sidebar (stay in place on scroll) */
        z-index: 1; /* Stay on top */
        top: 0; /* Stay at the top */
        left: 0;
        border-radius: 12px;
        background-color: #fafa3499; /* Black */
        overflow-x: hidden; /* Disable horizontal scroll */
        padding-top: 20px;
        padding-bottom: 20px;
        margin: 24px;
    }

    /* The navigation menu links */
    .sidebar a.sidebar_element {
        padding: 6px 8px 6px 16px;
        text-decoration: none;
        font-size: 25px;
        font-family: 'Montserrat', sans-serif;
        color: #000000;
        display: block;
    }
    /* The navigation menu links */
    .sidebar a.sidebar_element_exit {
        padding: 6px 8px 6px 16px;
        text-decoration: none;
        margin-top: 50px;
        font-size: 25px;
        font-family: 'Montserrat', sans-serif;
        color: #000000;
        display: block;
    }

    /* When you mouse over the navigation links, change their color */
    .sidebar a.sidebar_element:hover {
        color: #b0b0b0;
    }

    .sidebar a.sidebar_element_exit:hover {
        color: #b0b0b0;
    }

    /* Style page content */
    .content {
        margin-left: 300px; /* Same as the width of the sidebar */
        padding: 0px 10px;
    }

    /* On smaller screens, where height is less than 450px, change the style of the sidebar (less padding and a smaller font size) */
    @media screen and (max-height: 450px) {
        .sidebar {padding-top: 15px;}
        .sidebar a {font-size: 18px;}
    }
</style>